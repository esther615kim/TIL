schhol.friend = ['Lee' , school.teacher]

// edercise AK 3
let school2 :{
    score : (number|boolean)[],
    teacher : string,
    friend : string | string[]
} = {
    score : [100, 97, 84],
    teacher : 'Phil',
    friend : 'John'
}
school2.score[4] = false; // score => add boolean type
school2.friend = ['Lee' , school2.teacher] // friend => school.teacher => add array type


